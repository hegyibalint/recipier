generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/dev.db"
}

model Mealtime {
  id                 Int    @id @default(autoincrement())
  name               String @unique
  comes_after        Int
  AssignedMealRecipe Meal[]
}

model Recipe {
  id                 Int    @id @default(autoincrement())
  name               String @unique
  AssignedMealRecipe Meal[]
}

model Meal {
  mealtime   Mealtime @relation(fields: [mealtimeId], references: [id])
  mealtimeId Int
  recipe     Recipe   @relation(fields: [recipeId], references: [id])
  recipeId   Int

  date DateTime

  @@id([mealtimeId, recipeId])
}
