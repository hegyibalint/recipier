<h2>~ Meals ~</h2>

<div class="flex">
    <div>
        <button>&lt;</button>
    </div>
    <div class="grid grid-cols-7 grid-rows-1">
    <%= for day <- @days do %>
        <div class="flex flex-col">
            <p><%= format_date_segments(day.month) %> - <%= format_date_segments(day.day) %></p>

            <%= for mealtime <- @mealtimes do %>
                <p><%= mealtime["name"] %></p>
            <% end %>
        </div>
    <% end %>
    </div>
    <button>&gt;</button>
</div>
